<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="joslabs.cryptocurrency.Converter">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:id="@+id/card3"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/titles2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.50"
                    android:layout_height="wrap_content"
                    android:text="Currency"
                    android:layout_margin="10dp"
                    android:id="@+id/converted"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="50dp"
                    android:textSize="30dp"
                    android:text="BTC"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="50dp"
                    android:textSize="30dp"
                    android:text="ETH"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_below="@id/titles2"
                android:id="@+id/values2">


                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:hint="Enter Amount"
                    android:id="@+id/valuetoconvert"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:hint="--"
                    android:id="@+id/convertedbtc"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.25"
                    android:layout_height="wrap_content"
                    android:hint="--"
                    android:id="@+id/convertedeth"
                    android:layout_margin="10dp"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Convert"
                android:id="@+id/doconvert"
                android:layout_below="@+id/values2"/>
        </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>